<h1>Liste des utilisateurs</h1>
<form method="get" name="formulaire" action="{{ url('users.new') }}">
  <button type="submit">Ajouter</button>
</form>
<table class='table'>
<thead>
  <tr>
    <th>ID</th>
    <th>Nom</th>
    <th>Prénom</th>
    <th>Actions</th>
  </tr>
</thead>
<tbdoy>
{% for user in users %}
   <tr>
     <td>{{user.id}}</td>
     <td>{{user.nom}}</td>
     <td>{{user.prenom}}</td>
     <td>
       <form method="get" name="formulaire" action="{{ url('pcs.listUserPcs', {id: user.id}) }}">
            <button type="submit">PCs asociés</button>
        </form>
    </td>
     <td>
       <form method="post" name="formulaire" action="{{ url('users.delete', {id: user.id}) }}">
            <button type="submit">Supprimer</button>
        </form>
      </td>
      <td>
        <form method="get" name="formulaire" action="{{ url('users.edit', {id: user.id}) }}">
          <button type="submit">Modifier</button>
        </form>
      </td>
   </tr>
{% endfor %}
</tbdoy>
</table>

<a href="{{url('pc.list')}}">Voir les ordinateurs</a>
